@using VYPS.Mvc.Models
@model IEnumerable<Ogrenci>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;">Oğrenci listesi</h2>
<br />


<div class="list">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Ad</th>
                <th scope="col">Soyad</th>
                <th scope="col">Doğum Tarihi</th>
                <th scope="col">Bölüm</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ogrenci item in Model)
            {
                <tr>
                    <th scope="row">@item.no</th>
                    <td>@item.ad</td>
                    <td>@item.soyadi</td>
                    <td>@item.dtar</td>
                    <td>@item.bolumid</td>
                    <td>@Html.ActionLink("Sil", "Delete", new { id = item.no }, new { @class = "btn btn-danger" })</td>
                    <td>@Html.ActionLink("Güncelle", "Update", new { id = item.no }, new { @class = "btn btn-warning" })</td>
                </tr>
            }


        </tbody>
    </table>
    <br>
    <div>
        @Html.ActionLink("Yeni Öğrenci Ekle", "Insert", new { @class = "btn btn-success" })
    </div>
</div>


